		{
			experiences.map((exp, i) => {
				return(
					<Experience text={exp.text} num={exp.num} i={i} client:load />
				)
			})
		}
	</div>
</section>

	<!-- Projects Section -->

	<section class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[100px] ">
